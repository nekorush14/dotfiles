# keybind = cmd+g>k=goto_split:top
# keybind = cmd+g>h=goto_split:left
# keybind = cmd+g>l=goto_split:right

keybind = cmd+g>z=toggle_split_zoom

keybind = cmd+g>e=equalize_splits

### Resize
keybind = cmd+g>h=resize_split:left,50
keybind = cmd+g>j=resize_split:down,30
keybind = cmd+g>k=resize_split:up,30
keybind = cmd+g>l=resize_split:right,50

