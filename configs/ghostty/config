background-opacity = 0.85
background-blur-radius = 50
unfocused-split-opacity = 0.75

# Shell configs
command = /bin/zsh
shell-integration = zsh
shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = true 
copy-on-select = true

# Key configs
macos-option-as-alt = true
keybind = "global:ctrl+shift+t=toggle_quick_terminal"
keybind = shift+enter=text:\x1b\r

# Split keybindings
keybind = cmd+shift+d=new_split:down
keybind = cmd+d=new_split:right

# Scroll keybindings (all: prefix to work in Claude Code, etc.)
keybind = all:shift+page_up=scroll_page_up
keybind = all:shift+page_down=scroll_page_down
keybind = all:shift+home=scroll_to_top
keybind = all:shift+end=scroll_to_bottom

# Prefix based keybindings
keybind = cmd+g>r=reload_config
keybind = cmd+g>x=close_surface

## Tab
keybind = cmd+g>c=new_tab
keybind = cmd+g>w=close_tab
keybind = cmd+g>shift+l=next_tab
keybind = cmd+g>shift+h=previous_tab
keybind = cmd+g>comma=move_tab:-1
keybind = cmd+g>period=move_tab:1

## Pane
keybind = cmd+g>backslash=new_split:right
keybind = cmd+g>quote=new_split:down

